// Place your settings in this file to overwrite the default settings
// usually found in ~/Library/Application\ Support/Code/User/settings.json on mac
// found at %APPDATA/Code/User/Settings.json on windows
{
  "editor.insertSpaces": true,
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.wrappingColumn": 140,
  "editor.wordWrap": true,
  "editor.minimap.enabled": false,
  "editor.mouseWheelZoom": true,
  "editor.lineNumbers": "relative",
  "editor.fontFamily": "'Victor Mono', 'Fira Code', Monoid, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,

  "files.autoSave": "onWindowChange",
  "files.trimTrailingWhitespace": true,
  "window.zoomLevel": -1,
  "extensions.ignoreRecommendations": true,
  "explorer.confirmDragAndDrop": false,

  "git.autofetch": true,
  "git.confirmSync": false,
  "git.suggestSmartCommit": false,

  "typescript.check.tscVersion": false,
  "npm.enableScriptExplorer": true,
  "vim.disableAnnoyingNeovimMessage": true,
  "vim.vimrc.enable": true,
  "editor.fontSize": 13,
  "workbench.tree.indent": 10,
  "workbench.colorCustomizations": {
    "tree.indentGuidesStroke": "#00ff00"
  }

  # VSCode has gotten much worse lately at assuming 4-space indent when it shouldn't
  # used to be much, much better about this
  # Can't trust the detection anymore
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
}
